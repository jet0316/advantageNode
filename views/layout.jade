doctype html
html(lang='en', ng-app="master")
	head
		meta(charset="utf-8")
		title Advantage Screen Print
		//- link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/css/materialize.min.css")
		link(rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/cerulean/bootstrap.min.css")
		link(rel="stylesheet" type="text/css" href="CSS/main.css")

	body
	.container-fluid
		.row
			.container-fluid
				nav.nav.navbar-default
					.row
						.col-md-10.col-md-offset-1
							h3.nav.navbar-left Advantage
							ul.nav.navbar-left
								li
									a.navbar-brand(href="/")
							ul.nav.navbar-nav.navbar-right(ng-controller="navbar")
								li
									a(href="#/") HOME
								li
									a(href="#/about") ABOUT
								li
									a(href="#/contact") CONTACT US

								li(ng-show="!!!user")
									a(href="#/login") LOG IN/SIGN UP	
								li(ng-show="user")
									a(href="#/quotes") GET QUOTE/PLACE ORDER
								li(ng-show="!!!user.admin && user")
									a(href="#/user/{{user.username}}") ACCOUNT
								li(ng-show="user.admin")
									a(href="#/admin/{{user.username}}") ACCOUNT
								li(ng-show="user")
									a(href="/logout") LOGOUT
		block content
		

		//- script(src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js")
		//- script(src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.3/angular.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.3/angular-resource.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.3/angular-route.js")
		//- script(src="JavaScript/main.js")
		script(src="JavaScript/angular.js")