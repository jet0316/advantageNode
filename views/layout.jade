doctype html
html(lang='en', ng-app="master")
	head
		meta(charset="utf-8", name="viewport" content="width=device-width, initial-scale=1")
		title Advantage Screen Print
		//- link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/css/materialize.min.css")
		link(rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/flatly/bootstrap.min.css")
		link(rel="stylesheet" type="text/css" href="CSS/main.css")

	body
		nav.navbar.navbar-default.navbar-top
			.container-fluid
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(ng-href='#/') Advantage Screen Print
				#bs-example-navbar-collapse-1.collapse.navbar-collapse
					ul.nav.navbar-nav.navbar-right(ng-controller="navbar")
						li
							a(ng-href="#/") Home
						li
							a(ng-href="#/about") About
						li
							a(ng-href="#/contact") Contact Us

						li(ng-show="!!!user.password")
							a(ng-href="#/login") LogIn/SignUp	
						li(ng-show="user.password")
							a(ng-href="#/quotes") Get Quote/Place Order	
						li(ng-show="!!!user.admin && user.password")
							a(ng-href="#/user/{{user.username}}") Account
						li(ng-show="user.admin")
							a(ng-href="#/admin/{{user.username}}") Account
						li(ng-show="user.password")
							a(ng-href="/logout") Logout
		.container-fluid
			block content


		

